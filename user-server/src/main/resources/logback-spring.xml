<?xml version="1.0" encoding="utf-8" ?>
<configuration >

    <!-- name的值是变量的名称，value的值时变量定义的值。通过定义的值会被插入到logger上下文中。定义后，可以使“${}”来使用变量。 -->
    <property name="log.path" value="F:/IdeaWorkspace/logs" />

    <!--ch.qos.logback.core.ConsoleAppender类处理配置项-->
    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender" >
        <!--显示形式-->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d - %msg%n
            </pattern>
        </layout>

    </appender>
    <!--日志文件为滚动文件-->
    <appender name="fileInfoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!--因为error级别更高，所以过滤使用的类与上面不同-->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>  <!--匹配过滤，反之接受-->
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <!--注意此处为INCODEE-->
        <encoder>
            <!--输出形式-->
            <pattern>
                %msg%n
            </pattern>
        </encoder>
        <!--滚动策略，按照时间，每天输出一个文件-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>${log.path}/info.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="fileErrorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <!--注意此处为INCODEE-->
        <encoder>
            <!--输出形式-->
            <pattern>
                %msg%n
            </pattern>
        </encoder>
        <!--滚动策略，按照时间，每天输出一个文件-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>${log.path}/error.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    <!--项目使用范围ROOT(整个项目),级别为info-->
    <root level="info">
        <!--ref与上面的appender节点对应-->
        <appender-ref ref="consoleLog"/>
        <appender-ref ref="fileInfoLog"/>
        <appender-ref ref="fileErrorLog"/>
    </root>

</configuration>